<%- include("../../partials/header.ejs") %>

    <div class="container myContainer">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card card-body mt-4">
                    <h4 class="text-center">New Password</h4>
                    <form action="/auth/reset-password/<%=token%>" method="POST">
                        
                        <div class="form-group m-3">
                            <input
                                type="password"
                                name="newPassword"
                                id="newPassword"
                                class="form-control <%= error.newPassword ? "is-invalid" : "" %> "
                                placeholder="Enter new password(Min 6 character)"
                            >
                            <div class="invalid-feedback">
                                <%= error.newPassword && error.newPassword %> 
                            </div>
                        </div>
                        <div class="form-group m-3">
                            <input
                                type="password"
                                name="confirmPassword"
                                id="confirmPassword"
                                class="form-control <%= error.confirmPassword ? "is-invalid" : "" %> "
                                placeholder="Confirm Password"
                            >
                            <div class="invalid-feedback">
                                <%= error.confirmPassword && error.confirmPassword %> 
                            </div>
                        </div>
                        <div class="form-group m-3">
                        <input
                            type="submit"
                            class="btn btn-primary form-group ms-3"
                            value="Save"
                        ></div>
                    </form>
                </div>

            </div>
        </div>
    </div>
<%- include("../../partials/footer.ejs") %>

</body>

</html>