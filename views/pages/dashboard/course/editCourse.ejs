<%- include("../../../partials/body.ejs") %>


        <div class="container container-fluid"style="min-height: 495px;">
            <div class="row p-3">
                <div class="col-md-12">
                    <p class="p-3" style="height: 30px">
                       
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-5 offset-md-1">
                    <h4 class="text-center mb-3 ">Update Course</h4>
                    <div class="card card-body">
                        <form action="/courses/edit-course/<%= value._id %>" method="POST">
                            <div class="form-group mb-3">
                              <input
                                type="text"
                                name="title"
                                class="form-control <%= error.title ? "is-invalid" : "" %>"
                                id="courseTitle"
                                placeholder="Course title"
                                value = "<%= value.title ? value.title : "" %>" 
                            >
                                <div class="invalid-feedback">
                                    <%= error.title %>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                              <input
                                type="text"
                                name="code"
                                class="form-control <%= error.code ? "is-invalid" : "" %>"
                                id="courseCode"
                                placeholder="Course Code"
                                value = "<%= value.code ? value.code : "" %>" 
                               >
                               <div class="invalid-feedback">
                                    <%= error.code %>
                               </div>
                            </div>
                            <div class="form-group mb-3">
                              <input
                                type="text"
                                name="batch"
                                class="form-control <%= error.batch ? "is-invalid" : "" %>"
                                id="batch"
                                placeholder="Batch (with section)"
                                value = "<%= value.batch ? value.batch : "" %>" 
                               >
                               <div class="invalid-feedback">
                                    <%= error.batch %>
                               </div>
                            </div>
                            <div class="form-group mb-3">
                              <input
                                type="text"
                                name="term"
                                class="form-control <%= error.term ? "is-invalid" : "" %>"
                                id="term"
                                placeholder="Term e.g. Spring 2021"
                                value = "<%= value.term ? value.term : "" %>" 
                               >
                               <div class="invalid-feedback">
                                    <%= error.term %>
                               </div>
                            </div>
                            <div class="form-group mb-3">
                                <input
                                    type="submit"
                                    value="Update"
                                    class="btn btn-primary btn-sm my-2"
                                >
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-md-5 offset-md-1">
                    <h4 class="text-center mb-3 ">
                        Students list ( <%= studentsList.length %> )
                    </h4>
                    
                    <div style="overflow-x: hidden; overflow-y: scroll; height:400px;">
                    
                        <% studentsList.forEach(student => { %>
                            <div class="row">
                                <div class="col-md-5">
                                    <a
                                        class="text-white" 
                                        href="/dashboard/profile/<%= student.userId%>"
                                    >
                                        <%= student.name ? student.name : "" %>
                                    </a>
                                </div>
                                <div class="col-md-5">
                                    <a
                                        class="text-white" 
                                        href="/dashboard/profile/<%= student.userId%>"
                                    >
                                        <%= student.userId ? student.userId : "" %>
                                    </a>
                                </div>
                                <div class="col-md-2">
                                    <form 
                                        action="/courses/edit-course/remove-student/<%=value._id%>/student/<%=student._id%> " method="POST"
                                    >
                                        
                                        <button
                                            type="submit" class="btn"
                                            title="Remove"
                                        >
                                            <i class="fas fa-user-times" style="color: red"></i>
                                        </button>
                                    
                                    </form>
                                </div>  
                            </div>        
                        <% }) %> 
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include("../../../partials/footer.ejs") %>
    <script src="/scripts/qoutes.js"></script>

    </body>

</html>