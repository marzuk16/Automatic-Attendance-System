<%- include('../../partials/header.ejs') %>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2">

            </div>
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-6 offset-md-3">
                        <h4 class="text-center mt-3">
                            <%= title %>
                        </h4>
                        <div class="card card-body mb-5">
                            
                            <div class="profile-pics mb-4">
                                <img 
                                    src=" <%= profile.profilePics %> " alt="profile pics" class="img-thumbnail img-fluid ml-4" id="profilePics" 
                                    style="width: 270px; height: 270px; border-radius: 50%;">
                            </div>
                            <div class="row">
                                <div class="profileProperties row border m-2 p-2">
                                   <b>Name: </b> <span class="ml-2"><%= profile.name %></span>
                                </div>
                                <div class="profileProperties row border m-2 p-2">
                                    <b>Email: </b> <span class="ml-2"><%= student.email %></span>
                                </div>
                                <div class="profileProperties row border m-2 p-2">
                                    <b>Institute: </b> <span class="ml-2"><%= profile.institute %></span>
                                </div> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include("../../partials/footer.ejs") %>

    </body>

</html>