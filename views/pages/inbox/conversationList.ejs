<div class="container">
    <div class="row m-3" style=" border-bottom: 2px solid #192a3d; border-radius: 10px;">
        <div class="col-md-12 text-center">
            <h4 class="text-white">Conversation List</h4>
        </div>
    </div>
    <div class="row m-3">
        <div class="col-md-12">
            <% if (value.length) { %>
                <% for( let conversation of value) { %>
                    <h6 class="m-2 py-2 pl-2" style="border-radius: 5px; background-color: #192a3d;">
                        <a class ="text-white" href="/inbox/conversations/<%= conversation._id %>">
                            <%= conversation.title %>
                        </a> 
                    </h6>
                <% } %>
            <% }else{%>
                    <h4 class="text-danger">You don't have any conversations.</h4>
            <% } %> 
            
        </div>
    </div>
</div>