<div class="col-md offset-md-4" style="width: 350px;">
    <% if (flashMessage.success) { %>
    <div class="alert alert-success alert-dismissible fade show my-3 text-center">
        <%= flashMessage.success %>
        <button class=" close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true"> &times; </span>
        </button>
    </div>
    <% } %>

    <% if (flashMessage.fail) { %>
    <div class="alert alert-danger alert-dismissible fade show my-3 text-center">
        <%= flashMessage.fail %>
        <button class=" close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true"> &times; </span>
        </button>
    </div>
    <% } %>
</div>